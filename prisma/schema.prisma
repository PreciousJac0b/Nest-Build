generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  RETURNED
}

enum BookStatus {
  AVAILABLE
  RESERVED
  UNAVAILABLE
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  password  String
  createdAt DateTime @default(now())

  bookRequests BookRequest[]
  notifications Notification[]
}

model Book {
  id              Int      @id @default(autoincrement())
  name            String
  status          BookStatus?
  cover           String?
  yearPublished  Int
  createdAt DateTime @default(now())

  bookRequests   BookRequest[]
}

model BookRequest {
  id              Int      @id @default(autoincrement())
  userId    Int
  bookId    Int
  status    RequestStatus
  createdAt DateTime @default(now())
  updatedAt DateTime      @updatedAt
  
  user      User          @relation(fields: [userId], references: [id])
  book      Book          @relation(fields: [bookId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  payload   Json
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}